{
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev-backend\" \"npm run dev-frontend\"",
    "dev-backend": "cd backend && node ../server.js",
    "dev-frontend": "cd frontend && next dev",
    "prod": "npm install && cd backend && npm install && cd ../frontend && npm install && npm run build",
    "start": "node server.js"
  },
  "dependencies": {
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "next": "^15.2.4",
    "path": "^0.12.7"
  }
}
